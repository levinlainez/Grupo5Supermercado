<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="supermercado.app.economico.activities.PerfilActivity">

    <include
        android:id="@+id/toolbarPerfil"
        layout="@layout/toolbar"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutPerfil"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbarAdministracion"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayoutPerfil"/>

</LinearLayout>